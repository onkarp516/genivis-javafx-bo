                                <Label style="-fx-font-weight: bold; -fx-text-fill: #362f37;" text="Tax"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label fx:id="lbSalesOrderTotalTax"
                                       style="-fx-font-weight: bold; -fx-text-fill: #362f37;" text="0.00"/>
                            </HBox>
