                        <VBox id="sqtotalFirst" fx:id="totalmainDiv" spacing="20.0">
                            <HBox alignment="CENTER_LEFT">
                                <Label style="-fx-font-weight: bold; -fx-text-fill: #362f37;" text="Gross Total"/>
