                                            <Label id="gridCommonTextStyle" text="Max Stock : "/>
                                            <Label id="gridCommonTextStyleBlack" fx:id="lbSalesOrderMaxstock"/>
                                        </HBox>

                                    </VBox>

                                </HBox>
                            </VBox>
                        </VBox>
