                        <HBox id="sqtotalsecond" style="-fx-background-color: #a0efd2;">
                            <Label id="bigLabel" text="Bill Amount"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label id="bigLabel" fx:id="lbSalesOrderBillAmount" text="0.00"/>
                        </HBox>
