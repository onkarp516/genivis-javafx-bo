<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<BorderPane fx:id="borderpane" stylesheets="@../../css/commonStyles.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.opethic.genivis.controller.Reports.Transactions.PaymentReportScreen2Controller">
    <top>
        <VBox>
            <HBox alignment="CENTER" style="-fx-background-color: #b8e3fa;">
                <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-weight: 600; -fx-font-size: 16"
                       text="Payment Report Monthwise - ">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <Label fx:id="lblCompanyName" alignment="CENTER" contentDisplay="CENTER" style="-fx-font-weight: 600; -fx-font-size: 16"
                       text="*****">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
            </HBox>
            <HBox style="-fx-background-color: #d9f0fb;">
                <TextField fx:id="tfPaymentReport2ListSearch" prefWidth="400.0" minWidth="200.0" maxWidth="400.0" prefHeight="30.0" promptText="Search">
                    <HBox.margin>
                        <Insets left="10.0" top="10.0"/>
                    </HBox.margin>
                </TextField>
                <Label prefHeight="20.0" minWidth="40.0" text="Date :">
                    <font>
                        <Font size="14.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="15.0" top="15.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="tfPaymentReport2FromDate" prefHeight="30.0" promptText="DD/MM/YYYY">
                    <HBox.margin>
                        <Insets top="10.0"/>
                    </HBox.margin>
                </TextField>
                <TextField fx:id="tfPaymentReport2ToDate" prefHeight="30.0" promptText="DD/MM/YYYY">
                    <HBox.margin>
                        <Insets left="10.0" right="15.0" top="10.0"/>
                    </HBox.margin>
                </TextField>

                <Region HBox.hgrow="ALWAYS"/>
                <HBox prefHeight="43.0">
                    <Button mnemonicParsing="false" prefHeight="12.0"
                            style="-fx-background-color: transparent;">
                        <graphic>
                            <ImageView fitHeight="25.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../../assets/pdf.png"/>
                                </image>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets bottom="5.0" left="300.0" right="10.0" top="5.0"/>
                        </HBox.margin>
                    </Button>
                    <Button mnemonicParsing="false" prefHeight="12.0"
                            style="-fx-background-color: transparent;">
                        <graphic>
                            <ImageView fitHeight="25.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../../assets/excel.png"/>
                                </image>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets right="10.0" top="5.0"/>
                        </HBox.margin>
                    </Button>
                    <Button mnemonicParsing="false" prefHeight="12.0"
                            style="-fx-background-color: transparent;">
                        <graphic>
                            <ImageView fitHeight="25.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../../assets/csv.png"/>
                                </image>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets right="10.0" top="5.0"/>
                        </HBox.margin>
                    </Button>
                    <Button mnemonicParsing="false" prefHeight="12.0"
                            style="-fx-background-color: transparent;">
                        <graphic>
                            <ImageView fitHeight="25.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../../assets/print.png"/>
                                </image>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets top="5.0"/>
                        </HBox.margin>
                    </Button>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </HBox>
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tblvPaymentReport2List" editable="true" layoutX="4.0" layoutY="90.0" prefHeight="800.0"
                   stylesheets="@../../css/hsnStyle.css" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="tblcPaymentReport2Particulars" text="Months"/>
                <TableColumn fx:id="tblcPaymentReport2NoOfVouchers" text="No. Of Vouchers"/>
                <TableColumn fx:id="tblcPaymentReport2PaymentAmt" text="Total Payment Amt"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <VBox prefHeight="70.0" BorderPane.alignment="CENTER">
            <HBox>
                <Region HBox.hgrow="ALWAYS"/>

                <Label style="-fx-font-weight: 800;" text="Total ">
                    <font>
                        <Font size="18.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblTotalNoOfVouchers" style="-fx-font-weight: 700;" text="00.00">
                    <font>
                        <Font size="18.0"/>
                    </font>

                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblTotalPaymentAmt" style="-fx-font-weight: 700;" text="00.00">
                    <font>
                        <Font size="18.0"/>
                    </font>

                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>

