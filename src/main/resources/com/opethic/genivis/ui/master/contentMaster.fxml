<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="bpContentMaster" stylesheets="@../css/TranxCommonCssStyles/tranxCommonCssStyle7.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.opethic.genivis.controller.master.ContentMasterController">
    <top>
        <VBox id="topMainDiv">
            <HBox fx:id="hbContentMasterHeaderSect" alignment="CENTER_LEFT" spacing="10.0">
                <!--                <Label prefWidth="110.0" text="Content Name">-->
                <!--                    <HBox.margin>-->
                <!--                        <Insets left="6.0"/>-->
                <!--                    </HBox.margin>-->
                <!--                </Label>-->

                <HBox alignment="CENTER_LEFT">
                    <Label text="Content Name"/>
                    <Label style="-fx-text-fill: red;" text="*"/>
                </HBox>
                <TextField fx:id="tfContentMasterContentName" promptText="Content Name"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnContentMasterCreateSubmit" mnemonicParsing="false" styleClass="submit-btn"
                        text="Submit">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Button>
                <Button fx:id="btnContentMasterCreateCancel" mnemonicParsing="false" styleClass="cancel-btn"
                        text="Clear">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Button>

            </HBox>


        </VBox>

    </top>
    <center>
        <VBox style="-fx-background-color: #fff;">
            <children>

                <HBox id="supplierTableMainDiv" fx:id="hbContentMasterSearchSect" alignment="CENTER_LEFT">
                    <TextField id="tfSearchField" fx:id="tfSearchData" promptText="Search">
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </TextField>
                </HBox>
                <TableView id="tranxListTableViewStyle" fx:id="tcContentMasterView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="tcContentMasterContentName" text="Content Name"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>

    </center>
</BorderPane>
