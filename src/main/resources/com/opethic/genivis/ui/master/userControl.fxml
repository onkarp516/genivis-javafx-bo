<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<ScrollPane hbarPolicy="NEVER" stylesheets="@../css/commonStyles.css" vbarPolicy="ALWAYS" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.opethic.genivis.controller.master.UserControlController">
    <content>
        <BorderPane prefHeight="862.0" prefWidth="389.0">
            <top>
                <HBox BorderPane.alignment="CENTER" />
            </top>
            <left>
                <VBox fx:id="vboxBalance" />
            </left>
            <bottom>
                <HBox BorderPane.alignment="BOTTOM_RIGHT">
                    <children>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnSubmit" mnemonicParsing="false" onAction="#onSubmit" styleClass="submit-btn" text="Submit" HBox.hgrow="NEVER" />
                        <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#onCancel" styleClass="cancel-btn" text="Cancel">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
    </content>
</ScrollPane>
