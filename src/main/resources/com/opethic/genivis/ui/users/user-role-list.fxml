<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="bpRoot" stylesheets="@../css/TranxCommonCssStyles/tranxCommonCssStyle7.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.opethic.genivis.controller.users.UserRoleListController">
   <top>
      <VBox id="topMainDiv">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10">
               <TextField id="tfSearchField" fx:id="tfUserRoleSearch" promptText="Search" />
               <Region HBox.hgrow="ALWAYS" />
               <Button fx:id="btnCreate" styleClass="submit-btn" text="Create" />
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <TableView id="tranxListTableViewStyle" fx:id="tblUserRoleList">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy></TableView>
   </center>
</BorderPane>
