                        <padding>
                            <Insets left="5"/>
                        </padding>
                        <TextField fx:id="tfGSTR1NilRatedSearch" maxWidth="200" minWidth="200" prefWidth="200"
                                   promptText="Search" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="tfGSTR1NilRatedUpload" maxWidth="35" minWidth="35" prefWidth="35"
                                style="-fx-background-color:#FFFFFF">
                            <graphic>
                                <ImageView fitHeight="15" fitWidth="15">
                                    <Image url="@../assets/gstr1_nil_rated.png"/>
                                </ImageView>
                            </graphic>
                        </Button>
                    </HBox>
                </HBox>
            </VBox>

        </VBox>

