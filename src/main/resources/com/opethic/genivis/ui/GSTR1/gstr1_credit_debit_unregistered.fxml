                    <padding>
                        <Insets bottom="20" left="5" right="5" top="5  "/>
                    </padding>
                    <Label maxWidth="100" minWidth="100" prefWidth="100"
                           style="-fx-font-weight: bold; -fx-font-size: 14px;" text="From Date">
                        <padding>
                            <Insets left="15" right="15"/>
                        </padding>
                    </Label>
                    <TextField fx:id="dpGSTR1NilRatedFromDate" maxWidth="150" minWidth="150" prefWidth="150"
                               promptText="DD/MM/YYYY" HBox.hgrow="ALWAYS"/>
                    <Label maxWidth="100" minWidth="100" prefWidth="100"
                           style="-fx-font-weight: bold; -fx-font-size: 14px;" text="To Date">
                        <padding>
                            <Insets left="15" right="15"/>
                        </padding>
                    </Label>
                    <TextField fx:id="dpGSTR1NilRatedToDate" maxWidth="150" minWidth="150" prefWidth="150"
